<p id="notice"><%= notice %></p>
<div class="table-responsive-sm">
  <h2>Series</h2>
  <%= search_form_for @q do |s| %>

    <%= s.label :title_or_gender_cont, 'Titulo' %>
    <%= s.search_field :title_or_gender_cont , placeholder: 'Titulo o Genero'%>

    <%= s.submit 'Buscar' %>

  <% end %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Titulo</th>
        <th scope="col">Genero</th>
        <th scope="col">Precio</th>
        <th scope="col">Temporadas</th>
      </tr>
    </thead>
    <tbody>
      <% @series.each do |serie| %>
        <tr>
          <td scope="row"> <input type="checkbox" value="<%= serie.id %>" name="tableSerie" onchange="nuevoArriendo('tableSerie')" > </td>
          <td><%= serie.title %></td>
          <td><%= serie.gender %></td>
          <td><%= serie.price %></td>
          <td><%= serie.season %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <form action="<%= new_arriendo_path %>"  method = "get">
    <input type="hidden" name="serie" id="tableSerie">
    <input type="hidden" name="kind" value="serie">
    <button type="submit" class="btn btn-primary" > Arrendar </button>
  </form>
</div>