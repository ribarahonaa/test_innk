<div class="table-responsive-sm">
  <h2>Peliculas</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Titulo</th>
        <th scope="col">Genero</th>
        <th scope="col">Precio</th>
        <th scope="col">Duracion</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @films.each do |film| %>
        <tr>
          <td scope="row"><%= film.title %></td>
          <td><%= film.gender %></td>
          <td><%= film.price %></td>
          <td><%= film.duration %></td>
          <td><%= link_to 'Arrendar', new_arriendo_path(kind: 'film', film: film), class: 'btn btn-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br/>
<div class="table-responsive-sm">
  <h2>Series</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Titulo</th>
        <th scope="col">Genero</th>
        <th scope="col">Precio</th>
        <th scope="col">Temporadas</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @series.each do |serie| %>
        <tr>
          <td scope="row"><%= serie.title %></td>
          <td><%= serie.gender %></td>
          <td><%= serie.price %></td>
          <td><%= serie.season %></td>
          <td><%= link_to 'Arrendar', new_arriendo_path(kind: 'serie', serie: serie), class: 'btn btn-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>